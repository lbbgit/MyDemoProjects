{  
  "name": "☆★☆",  
  "version": "0.9.1",  
  "description": "it manage the technology",  
  "manifest_version":2, 
  "browser_action": {  
    "default_icon": "icon.png" ,
    "default_title": "God's Task List",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
            "matches": ["*://*/*"],
            "css": ["mystyles.css"],
            "js": ["content.js","myscript.js"],
            "run_at":"document_start",  
	    "all_frames":true
    }],
    "options_page":"options.html",
    "permissions":[
    	"tabs",
    	"activeTab",
    	"https://*/*",
    	"*://*/*"
    ],
  "background": {
    "scripts": ["bg.js"],
    "persistent":false
  }  
} 